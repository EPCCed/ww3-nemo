
%CCOMPILER      CC
%FCOMPILER      ftn
%LINKER         ftn

%BASE_CFLAGS    -ansi -w
%PROD_CFLAGS    -O1 -DBOOST_DISABLE_ASSERTS
%DEV_CFLAGS     -O2
%DEBUG_CFLAGS   -g

%BASE_FFLAGS    -em -m 4 -e0 -eZ -J ../inc
%PROD_FFLAGS    -O3
%DEV_FFLAGS     -G2
